{
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": false,
    "endOfLine": "auto",
    "printWidth": 100,
    "requirePragma": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "{**/*,*}.{css,scss,sass,less,js,jsx,ts,tsx,json,md,mdx}",
            "excludeFiles": [
                "**/node_modules/**",
                "**/dist/**",
                "**/build/**",
                "**/coverage/**",
                "**/public/**",
                "**/*.d.ts",
                "**/deployment/**"
            ],
            "options": { "requirePragma": false }
        }
    ]
}
